
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logEditText" 
        android:focusableInTouchMode="false"
        android:gravity="top|left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="1"
        />
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1" 
        android:columnCount="2"
        android:layout_rowWeight="1"
        >
        <Button
            android:text="Загрузить критерии"
            android:id="@+id/importPhoneNumberCriteriasButton"
            android:layout_column="0"
            android:layout_row="0"
            style="@style/buttonsInGridLayout"
            />
        <Button
            android:text="Показать критерии"
            android:id="@+id/showPhoneNumberCriteriasButton" 
            android:layout_column="1"
            android:layout_row="0"
            style="@style/buttonsInGridLayout"
            />
        <Button
            android:text="Настройки"
            android:id="@+id/settingsButton" 
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            style="@style/buttonsInGridLayout"
            />
        <Button
            android:text="Очистить окно"
            android:id="@+id/clearLogWindowButton" 
            android:layout_column="1"
            android:layout_row="1"
            style="@style/buttonsInGridLayout"
            />
        <Button
            android:text="Загрузить лог спама"
            android:id="@+id/uploadSpamLog"
            android:layout_column="0"
            android:layout_row="2"
            style="@style/buttonsInGridLayout"
            />
        
        <Button
            android:text="Показать окно вызова"
            android:id="@+id/showCallWindow" 
            android:layout_column="1"
            android:layout_row="2"
            style="@style/buttonsInGridLayout"
            />


        

    </GridLayout>



</LinearLayout>