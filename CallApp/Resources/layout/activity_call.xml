
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Имя абонента"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callerDisplayNameTextView"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="24sp" 
        android:textColor="#000000"
        />
    <TextView
        android:text="Вызов абонента"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statusTextView"
        android:gravity="center"
        android:textFontWeight="1"
        android:layout_weight="3"
        android:textSize="36sp"
        android:textColor="#000000"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:minHeight="60dp"
        
        >
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:src="@mipmap/baseline_call_end_black_48"
            android:id="@+id/callButton"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:src="@mipmap/baseline_mic_black_48"
            android:id="@+id/muteButton" 
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <!--<ImageButton
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:src="@mipmap/baseline_volume_off_black_48"
            android:id="@+id/speakerphoneButton"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:id="@+id/button4" 
            android:src="@mipmap/baseline_dialpad_black_48"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />-->
    </LinearLayout> 

</LinearLayout>